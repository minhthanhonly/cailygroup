<html lang="en">
  <!-- CSS only -->

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <div class="container">
      <a class="icon-link" href="/">Trang chủ</a>
      <form action="/put-crud" method="POST" class="mt-5">
        <h4 class="font mb-5">Edit user's infomation</h4>
        <input
          class="form-control"
          type="text"
          value="<%=dataEdit.id %>"
          name="id"
          hidden
        />
        <div class="row">
          <div class="col-6 mb-3">
            <label for="firstname" class="form-label">Tên đăng nhập</label>
            <input
              class="form-control"
              type="text"
              value="<%=dataEdit.userid %>"
              name="userid"
            />
          </div>
          <div class="col-md-6 mb-3">
            <label for="firstname" class="form-label">Tên người dùng</label>
            <input
              type="text"
              class="form-control"
              id="realname"
              name="realname"
              value="<%=dataEdit.realname %>"
            />
          </div>
          <div class="col-md-6 mb-3">
            <label for="password" class="form-label">Mật khẩu mới</label>
            <input
              type="text"
              class="form-control"
              id="password"
              name="password"
            />
          </div>
          <div class="col-6 mb-3">
                <label for="group" class="form-label">Nhóm</label>
                <select id="group" name="group" class="form-select">
                    <% for(let i = 1; i <= 4; i++) { %>
                        <% let groupName = getDataByGroup(i); %>
                        <option value="<%= i %>" <%= i === dataEdit.user_group ? 'selected' : '' %>><%= groupName %></option>
                    <% } %>
                </select>
            </div>
          <div class="col-6 mb-3">
                <label for="authority" class="form-label">Quyền hạn</label>
                <select id="authority" name="authority" class="form-select">
                    <% for(let i = 1; i <= 4; i++) { %>
                        <% let authorityName = getDataByAuthority(i); %>
                        <% let authority = getAuthority(i); %>
                        <option value="<%= authority %>" <%= authority === dataEdit.authority ? 'selected' : '' %>><%= authorityName %></option>
                    <% } %>
                </select>
            </div>
          <div class="col-12 mb-3">
            <button type="submit" class="btn btn-primary">Update</button>
          </div>
        </div>
      </form>
    </div>
  </body>
<% function getDataByGroup(group) {
    switch (group) {
        case 1:
            return "Chung";
        case 2:
            return "WEB";
        case 3:
            return "Thiết bị A";
        case 4:
            return "Thiết kế";
        default:
            return "";
    }
} %>
<% function getAuthority(i) {
    switch (i) {
        case 1:
            return "member";
        case 2:
            return "leader";
        case 3:
            return "manager";
        case 4:
            return "admin";
        default:
            return "";
    }
} %>
<% function getDataByAuthority(authority) {
    switch (authority) {
        case 1:
            return "Thành Viên";
        case 2:
            return "Trưởng nhóm";
        case 3:
            return "Giám đốc";
        case 4:
            return "Admin";
        default:
            return "";
    }
} %>
</html>
