<html lang="en">
  <!-- CSS only -->

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <div class="container">
      <a class="icon-link" href="/">Trang chủ</a>
    <h2 class="mt-5 text-center">Thêm mới người dùng</h1>
      <form action="/post-crud" method="POST" class="mt-5">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="userid" class="form-label">User ID</label>
            <input type="text" class="form-control" id="userid" name="userid" />
          </div>
          <div class="col-md-6 mb-3">
            <label for="password" class="form-label">Mật khẩu</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
            />
          </div>
          <div class="col-md-6 mb-3">
            <label for="realname" class="form-label">Họ và tên</label>
            <input
              type="text"
              class="form-control"
              id="realname"
              name="realname"
            />
          </div>
          <div class="col-md-6 mb-3">
            <label for="group" class="form-label">Nhóm</label>
            <select id="group" name="group" class="form-select">
              <% for(var i=0; i < dataTable.length; i++) { %>
                <option value="<%= dataTable[i].id %>"><%= dataTable[i].group_name %></option>
              <% } %>
            </select>
          </div>
          <div class="col-md-3 mb-3">
            <label for="authority" class="form-label">Quyền truy cập</label>
            <select id="authority" name="authority" class="form-select">
              <option value="member">Thành viên</option>
              <option value="editor">Trưởng nhóm</option>
              <option value="manager">Giám đốc</option>
              <option value="admin">Admin</option>
            </select>
          </div>
          <div class="col-12 mb-3">
            <button type="submit" class="btn btn-primary">
              Tạo người dùng
            </button>
            <a href="/display-crud" class="btn btn-warning">
              Quay lại trang người dùng
            </a>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
