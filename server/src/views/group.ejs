<html lang="en">
  <!-- CSS only -->

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <div class="container">
      <a class="icon-link" href="/">Trang chủ</a>
      <form action="/create-group" method="POST" class="mt-5">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="id" class="form-label">ID Nhóm</label>
            <input type="text" class="form-control" id="id" name="id" />
          </div>
          <div class="col-md-6 mb-3"></div>
          <div class="col-md-6 mb-3">
            <label for="group_name" class="form-label">Tên nhóm</label>
            <input
              type="text"
              class="form-control"
              id="group_name"
              name="group_name"
            />
          </div>
          <div class="col-12 mb-3">
            <button type="submit" class="btn btn-primary">Tạo nhóm mới</button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
